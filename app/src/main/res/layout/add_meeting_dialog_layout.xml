<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Add new meeting"
        android:textColor="@color/primaryTextColor"
        android:textSize="20sp"
        />

    <View
        android:id="@+id/sep_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/title"
        android:background="@color/dividerColor" />

    <TextView
        android:id="@+id/add_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_below="@id/sep_line"
        android:text="Title:" />


    <EditText
        android:id="@+id/edtMeetingName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Add meeting title"
        android:textSize="16sp"
        android:layout_below="@id/add_name_text"
        android:textColor="@color/primaryTextColor"
        android:inputType="textCapSentences"
        android:textColorHint="@color/light_gray" />

    <TextView
        android:id="@+id/add_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/edtMeetingName"
        android:text="Date:" />

<LinearLayout
    android:id="@+id/ll_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@id/add_date_text"
    android:layout_marginTop="5dp"
    android:weightSum="1">
    <EditText
        android:id="@+id/edtMeetingDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Add meeting date"
        android:textSize="16sp"
        android:textColor="@color/primaryTextColor"
        android:textColorHint="@color/light_gray"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/select_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:text="Select Date"/>
        </LinearLayout>



    <TextView
        android:id="@+id/add_title_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/ll_date"
        android:text="Time:" />

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/add_title_time"
            android:layout_marginTop="5dp"
            android:weightSum="1">
    <EditText
        android:id="@+id/edtMeetingTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Add meeting time"
        android:textSize="16sp"
        android:layout_below="@id/add_title_time"
        android:textColor="@color/primaryTextColor"
        android:layout_weight="1"
        android:textColorHint="@color/light_gray" />

            <TextView
                android:id="@+id/select_time_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:text="Select Time"/>
        </LinearLayout>

    <TextView
        android:id="@+id/add_meeting_venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/ll_time"
        android:text="Venue:" />


    <EditText
        android:id="@+id/edtMeetingVenue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Add meeting venue"
        android:textSize="16sp"
        android:layout_below="@id/add_meeting_venue"
        android:textColor="@color/primaryTextColor"
        android:inputType="textCapSentences"
        android:textColorHint="@color/light_gray" />

    <TextView
        android:id="@+id/add_agenda_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/edtMeetingVenue"
        android:text="Agenda:" />


    <EditText
        android:id="@+id/edtMeetingAgenda"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Add meeting agenda"
        android:textSize="16sp"
        android:gravity="top|left"
        android:layout_below="@id/add_agenda_text"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/primaryTextColor"
        android:textColorHint="@color/light_gray"
        />

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/edtMeetingAgenda"
        android:layout_marginTop="15dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/textPrimaryColor"
            android:background="@drawable/dialog_button_bg"
            android:layout_marginRight="3dp"
            android:textSize="20sp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/tvAdd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Add"
            android:padding="5dp"
            android:layout_marginLeft="3dp"
            android:textColor="@color/textPrimaryColor"
            android:background="@drawable/dialog_button_bg"
            android:textSize="20sp" />
        </LinearLayout>
</RelativeLayout>
    </ScrollView>
</RelativeLayout>
</LinearLayout>